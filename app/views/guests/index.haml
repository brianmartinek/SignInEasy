.page-header
  %h1 Visitor Log

=will_paginate @guests, previous_label: h("Back"), next_label: h("Forward"), renderer: BootstrapPagination::Rails

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Email
      %th Another Data Point
      %th Another Data Point
      %th Visiting Reason
      %th Date
      %th Time
      %th 
      %th Delete

  %tbody
    - @guests.each do |guest|
      %tr
        %td 
          = guest.name
        %td 
          = guest.email
        %td
        %td  
        %td 
        %td 
          = guest.created_at.strftime("%b. %d\, %Y")
        %td 
          = guest.created_at.in_time_zone.strftime(" %I:%M %p")
        %td
        %td
%hr

= link_to 'new', new_organization_guest_path, :class => 'btn btn-primary'