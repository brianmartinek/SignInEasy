%br
  .h3.col-lg-10.col-lg-offset-1.center Last step! Please fill out the information below. The person you are here to see will be automatically notified of your arrival.
%br

.row
  .col-lg-10.col-lg-offset-1
    = form_for(@guest, :html => { :class => 'form-horizontal'}) do |f|
      = if @guest.errors.any?
        .error_explanation
          %h2
          = pluralize(@guest.errors.count, "error")

        %ul
        = @guest.errors.full_messages.each do |msg|
          %li
          = msg
      .row.form-group
      
        = f.label :name, "Name", :class => 'col-lg-2'
        = f.text_field :name, :class => 'form-control input-lg col-lg-6', :placeholder => 'Enter your first and last name ex: John Smith', :required => "true"
        = f.label :name, "CLIENT SIDE VALIDATIONS", :class => 'col-lg-2'

      .form-group
        = f.label :name, "Company Name"
        = f.text_field :name, :class => 'form-control input-lg', :placeholder => '1871'

      .form-group
        = f.label :email, "Email Address"
        = f.email_field :email, :class => 'form-control input-lg', :placeholder => 'johnsmith@gmail.com'

      .form-group
        = f.label :employee_name, "Hosting Member"
        = f.text_field :employee_name, :class => 'form-control input-lg', :placeholder => 'Start typing the name of the person you are here to see', :required => "true"

      .form-group
        = f.hidden_field :organization_id, value: @organization_id


      .form-group.center-buttons.span-3
        = f.submit 'Register', :class => 'btn btn-success btn-xlg'
      .form-group.center-buttons.span-3  
        = submit_tag 'Cancel', :type => :reset, :class => 'btn btn-default form-cancel-btn'