#clearance.password-reset
  %h2
    = t '.title'

  %p
    = t '.description'


    = simple_form_for(:password, :url => passwords_path, :html => { :class => 'form form-horizontal' }) do |form|
      .form-group
        = form.input :email, :input_html => { :class => 'form-control' }, :placeholder => "Email address", :required => "", :type => "text"
      .form-group
        = form.submit "Reset password", :class => 'btn btn-default'
