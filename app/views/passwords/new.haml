#clearance.password-reset
.col-lg-4.col-lg-offset-4
  %h2
    = t '.title'

  %p
    = t '.description'


    = form_for(:password, :url => passwords_path, :html => { :class => 'form-horizontal' }) do |form|
      .form-group
        = form.email_field :email, :class => 'form-control', :placeholder => "Email address", :required => "", :type => "text"
      .form-group
        = form.submit "Reset password", :class => 'btn btn-default'
